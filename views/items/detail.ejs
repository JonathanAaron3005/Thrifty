<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/stars.css">

<style>
    .zasize {
        width: 90%;
        max-width: 1280px;

        margin-left: 5%;
        margin-top: 5%;
    }

    .square-img {
        max-width: 100%;
        max-height: 100%;
        height: auto;
        object-fit: contain;
        aspect-ratio: 1/1;
    }

    .card-title {
        color: black;
        font-weight: 600;
        font-size: 2rem;
    
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;

        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .sub-title {
        color: grey;
        font-weight: 400;
        
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;

        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;

        font-size: 0.75rem;
        height: 0.75rem;
    }

    .desc {
        color: black;
        font-weight: 200;
        
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;

        -webkit-box-orient: vertical;

        font-size: 1rem;
    }

    .gaping {
        margin: 0 0.5rem 0 0.5rem;
    }

    .textbox-container {
        display: flex;
        align-items: center;

        width: 100%;
        height: 30px;
    }

    .textbox {
        width: 100%;
        height: 100%;
        aspect-ratio: 1.5/1;

        text-align: center;
        font-size: 16px;

        border: none;
        border-radius: 0;
        box-shadow: none;

        margin: 0 5px 0 5px;
    }

    .pencet {
        border: none;
        border-radius: 0;
        box-shadow: none;

        background-color: #f5f5f5;
        text-decoration: none;

        color: black;
        font-weight: 600;

        text-align: center;
        align-items: center;
        justify-content: center;
        display: flex;

        opacity: 0.5;
        margin: 0 0 0 0;

        width: 30px;
        height: 30px;
        aspect-ratio: 1/1;
    }

    .pencet.active {
        cursor: pointer;
        opacity: 1.0;
        margin: 0 0 0 0;
    }

    .some-button {
        font-size: 1rem;
        height: 40px;

        align-items: center;
        text-align: center;
        justify-content: center;
        display: flex;

        overflow: hidden;
        text-overflow: ellipsis;
    }

    .some-button.small {
        height: 30px;
        font-size: 0.75rem;
        font-weight: 600;
    }
</style>

<div class="row d-flex flex-column align-items-center" style="height: fit-content; min-height: calc(100% - 0px);">
    <div class="zasize">
        <div class="row">
            <div class="col">
                <div id="itemCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <% item.images.forEach((img, i) => {  %>
                            <div class="carousel-item square-img <%= i === 0 ? 'active' : ''%>">
                                <img src="<%= img.url%>" class="d-block w-100" alt="">
                            </div>
                        <% }) %>
                        <% if (item.images.length <= 0) { %>
                            <div class="carousel-item square-img active">
                                <img src="https://pbs.twimg.com/media/Fy4kaW4aEAE3mQS?format=png&name=orig" class="d-block w-100" alt="">
                            </div>
                        <% } %>
                    </div>
                    <% if(item.images.length > 1) {%>
                        <a class="carousel-control-prev" href="#itemCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#itemCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    <% } %>
                </div>
            </div>
            <div class="col-4">
                <h3 class="font-poppins card-title" id=""><%= item.name %></h3>
                <div class="d-flex flex-wrap">
                    <h5 class="font-poppins sub-title">100+ Sold</h5>
                    <h5 class="font-poppins sub-title gaping">•</h5>
                    <h5 class="font-poppins sub-title">4.9 (55 Reviews)</h5>
                    <h5 class="font-poppins sub-title gaping">•</h5>
                    <h5 class="font-poppins sub-title">55 Discussions</h5>
                </div>
                <h3 class="font-kaisei price-label card-title" style="line-height: normal; margin: 1rem 0 1rem 0"><%= item.price%></h3>
                <div class="line" style="background-color: grey; width: 100%; height: 2px; opacity: 0.5; margin-bottom: 1rem;"></div>
                <p class="font-poppins desc"><%= item.description%></p>
            </div>
            <div class="col">
                <div class="orange d-flex flex-column" style="width: 100%; height: fit-content; padding: 1rem 1rem">
                    <div class="font-poppins desc">Buy Amount</div>
                    <div class="textbox-container" style="width: 70%; margin-bottom: 1rem;">
                        <button class="font-poppins pencet" id="amount-minus" onclick="onAmountMinus()">-</button>
                        <input type="text" class="textbox font-poppins" id="amount-input" value="0">
                        <button class="font-poppins pencet  active" onclick="onAmountPlus()">+</button>
                    </div>
                    <div class="line" style="background-color: black; width: 100%; height: 2px; margin-bottom: 1rem; opacity: 0.5"></div>
                    <button class="black-rounded-button font-poppins w-100 some-button" style="margin-bottom: 0.5rem;">Wishlist!</button>
                    <div class="d-flex flex-wrap align-items-center justify-content-center">
                        <button class="black-rounded-button font-poppins some-button small" style="width: calc(50% - 5px); margin-right: 10px">Add to cart</button>
                        <button class="black-rounded-button font-poppins some-button small" style="width: calc(50% - 5px)">Buy</button>
                    </div>
                </div>
            </div>
            <%  if( currentUser && item.user.equals(currentUser._id))  {%>
                <div class="col">
                    <div class="card-body">
                        <a class="card-link btn btn-info" href="/item/<%=item._id%>/edit">Edit</a>
                        <form class="d-inline" action="/item/<%=item._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <div class="card-body">
                        <form action="/cart/<%=item._id%>" method="POST" novalidate class="validated-form">
                            <label class="form-label" for="qty">Quantity</label>
                            <input class="form-control mb-2" type="number" id="qty" name="quantity" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <button class="btn btn-success">Add to Cart</button>
                        </form>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script>
    function updateAmount(addition) {
        const input = document.getElementById("amount-input")
        var currAmm = Number( input.value )

        if (currAmm + addition >= 0) {
            currAmm += addition;
        }
        input.value = currAmm

        const minButton = document.getElementById("amount-minus")
        if (currAmm > 0) {
            minButton.classList.add("active")
        } else {
            minButton.classList.remove("active")
        }
    }

    function onAmountMinus() {
        updateAmount(-1)
    }

    function onAmountPlus() {
        updateAmount(1)
    }
</script>



